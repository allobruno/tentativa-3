@{
    ViewData["Title"] = "Página Inicial";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu Lateral</title>
    <!-- Bootstrap CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilo do menu lateral (off-canvas sidebar) */
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #3e2723; /* Marrom */
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            z-index: 1000; /* Valor alto para sobrepor */
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 10px;
                font-size: 36px;
            }

        /* Estilo para empurrar o conteúdo quando o menu abrir */
        #main {
            transition: margin-left 0.5s;
            padding: 16px;
        }

        /* Definição da classe btn-brown */
        .btn-brown {
            background-color: #6D4C41;
            color: white;
            transition: background-color 0.3s;
        }

            .btn-brown:hover {
                background-color: #5d3d35;
            }

        /* Ajustes de margin para evitar conflito com o menu lateral */
        body {
            padding-left: 0;
        }
    </style>
</head>
<body>

    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="@Url.Action("Login", "Home")">Entrar ou Cadastre-se</a>
        <a href="/meus-pedidos">Meus Pedidos</a>
        <a href="@Url.Action("SobreNos", "Home")">Sobre Nós</a>
        <a href="@Url.Action("Portfolio", "Home")">Portfólio</a>
        <a href="@Url.Action("NossaMissao", "Home")">Nossa Missão</a>
        <a href="@Url.Action("DuvidasFrequentes", "Home")">Dúvidas Frequentes</a>
        <a href="@Url.Action("FaleConosco", "Home")">Fale Conosco</a>
    </div>

    <div id="main">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-brown">
            <a class="navbar-brand" href="javascript:void(0)" onclick="openNav()">Menu</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="navbar-brand" href="/">
                            <!-- <a class="nav-link" href="/">Coffee Tech</a> -->
                            <img src="/imagens/logo-coffeetech.png" alt="Fazenda Urbana Café" style="height: 40px;">
                        </a>
                    </li>
                    <!-- Outras opções -->
                </ul>
            </div>

            <!-- Botões de usuário -->
            <div class="form-inline">
                <a href="@Url.Action("Carrinho", "Cart")" class="btn btn-outline-light">Carrinho</a>
                <a href="@Url.Action("Login", "Home")" class="btn btn-outline-light ml-2">Login</a>
            </div>
        </nav>

        <!-- Seção de botões centrais -->
        <div class="row my-5 text-center">
            <div class="col-md-4">
                <a href="@Url.Action("Portfolio", "Home")">
                    <img src="/imagens/cafe_vermelho.jpg" class="imagem-retangular rounded" alt="Café Vermelho">
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("Portfolio", "Home")">
                    <img src="/imagens/cafe_torrado.jpg" class="imagem-retangular rounded" alt="Café Torrado">
                </a>
            </div>

            <div class="col-md-4">
                <a href="@Url.Action("Portfolio", "Home")">
                    <img src="/imagens/cafe_verde.jpg" class="imagem-retangular rounded" alt="Café Verde">
                </a>
            </div>
        </div>

        <!-- Botões inferiores -->
        <div class="row text-center my-3">
            <div class="col">
                <a href="@Url.Action("SobreNos", "Home")" class="btn btn-brown">Sobre Nós</a>
            </div>
            <div class="col">
                <a href="@Url.Action("Portfolio", "Home")" class="btn btn-brown">Portfólio</a>
            </div>
            <div class="col">
                <a href="@Url.Action("NossaMissao", "Home")" class="btn btn-brown">Nossa Missão</a>
            </div>
            <div class="col">
                <a href="@Url.Action("DuvidasFrequentes", "Home")" class="btn btn-brown">Dúvidas Frequentes</a>
            </div>
            <div class="col">
                <a href="@Url.Action("FaleConosco", "Home")" class="btn btn-brown">Fale Conosco</a>
            </div>
        </div>
    </div>

    <!-- JavaScript para abrir/fechar o menu lateral -->
    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "250px";
            document.getElementById("main").style.marginLeft = "250px";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.width = "0";
            document.getElementById("main").style.marginLeft = "0";
        }
    </script>

    <!-- Bootstrap JS e jQuery (necessário para colapsar o menu em dispositivos móveis) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
