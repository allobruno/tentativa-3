@{
    ViewData["Title"] = "Fale Conosco";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sobre Nós</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilo do menu lateral (off-canvas sidebar) */

        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #3e2723; /* Marrom */
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
            z-index: 1000; /* Valor alto para sobrepor */
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 10px;
                font-size: 36px;
            }

        /* Estilo para empurrar o conteúdo quando o menu abrir */
        #main {
            transition: margin-left 0.5s;
            padding: 16px;
        }

        /* Definição da classe btn-brown */
        .btn-brown {
            background-color: #6D4C41;
            color: white;
            transition: background-color 0.3s;
        }

            .btn-brown:hover {
                background-color: #5d3d35;
            }

        /* Ajustes de margin para evitar conflito com o menu lateral */
        body {
            padding-left: 0;
            background-color: #f8f9fa;
            background-image: url('/imagens/fundo.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
        }

        .content {
            margin-top: 50px;
        }

        .title {
            font-size: 2rem;
            color: #6D4C41;
        }

        .text-section {
            font-size: 1.2rem;
            line-height: 1.6;
        }

        .image-section {
            text-align: right;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="date"] {
            background-color: #6D4C41; /* Marrom */
            color: white; /* Cor do texto dentro da caixa */
            border: 1px solid #3e2723; /* Cor da borda marrom escura */
            padding: 10px;
            border-radius: 5px; /* Bordas arredondadas (opcional) */
        }


            .image-section img {
                max-width: 100%;
            }
    </style>
</head>
<body>

    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="@Url.Action("Login", "Home")">Entrar ou Cadastre-se</a>
        <a href="/meus-pedidos">Meus Pedidos</a>
        <a href="@Url.Action("SobreNos", "Home")">Sobre Nós</a>
        <a href="@Url.Action("Portfolio", "Home")">Portfólio</a>
        <a href="@Url.Action("NossaMissao", "Home")">Nossa Missão</a>
        <a href="@Url.Action("DuvidasFrequentes", "Home")">Dúvidas Frequentes</a>
        <a href="@Url.Action("FaleConosco", "Home")">Fale Conosco</a>
    </div>

    <div id="main">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-brown">
            <a class="navbar-brand" href="javascript:void(0)" onclick="openNav()">Menu</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="navbar-brand" href="/">
                            <!-- <a class="nav-link" href="/">Coffee Tech</a> -->
                            <img src="/imagens/logo-coffeetech.png" alt="Fazenda Urbana Café" style="height: 40px;">
                        </a>
                    </li>
                    <!-- Outras opções -->
                </ul>
            </div>

            <!-- Botões de usuário -->
            <div class="form-inline">
                <a href="@Url.Action("Carrinho", "Cart")" class="btn btn-outline-light">Carrinho</a>
                <a href="@Url.Action("Login", "Home")" class="btn btn-outline-light ml-2">Login</a>
            </div>
        </nav>
    </div>

    <div class="container content">
        <!-- Metade Superior -->
        <div class="row">
            <div class="col-md-6">
